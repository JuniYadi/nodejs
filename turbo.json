{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "DYNAMODB_TABLE", "AWS_REGION"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", "storybook-static/**"],
      "dependsOn": ["^build"],
      "inputs": ["src/**"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:watch": {
      "cache": false
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    }
  }
}
